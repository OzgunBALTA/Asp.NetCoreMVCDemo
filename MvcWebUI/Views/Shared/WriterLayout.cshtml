<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <link rel="stylesheet" href="~/WriterThema/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/WriterThema/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/WriterThema/assets/css/style.css">
    <link rel="shortcut icon" href="~/WriterThema/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        @await Component.InvokeAsync("WriterNavbar")
        <div class="container-fluid page-body-wrapper">
            @await Component.InvokeAsync("WriterSidebar")
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                @await Component.InvokeAsync("WriterFooter")
            </div>
        </div>
    </div>
    <script src="~/WriterThema/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/WriterThema/assets/js/off-canvas.js"></script>
    <script src="~/WriterThema/assets/js/hoverable-collapse.js"></script>
    <script src="~/WriterThema/assets/js/misc.js"></script>
</body>
</html>