@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Weblog a Blogging Category Bootstrap responsive WebTemplate | Blog3 :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="Weblog a Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <link href="~/CoreBlogThema/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="~/CoreBlogThema/css/single.css">
    <link href="~/CoreBlogThema/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/CoreBlogThema/css/fontawesome-all.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet">
</head>

<body>
    <header>
        <div class="top-bar_sub_w3layouts container-fluid">
            <div class="row">
                <div class="col-md-4 logo text-left">
                    <a class="navbar-brand" href="/blog/index">
                        <i class="fab fa-linode"></i> Core 6.0 PROJE
                    </a>
                </div>
                @await Html.PartialAsync("_AuthPartialWiev")
                <div class="col-md-4 log-icons text-right">

                    <ul class="social_list1 mt-3">

                        <li>
                            <a href="#" class="facebook1 mx-2">
                                <i class="fab fa-facebook-f"></i>

                            </a>
                        </li>
                        <li>
                            <a href="#" class="twitter2">
                                <i class="fab fa-twitter"></i>

                            </a>
                        </li>
                        <li>
                            <a href="#" class="dribble3 mx-2">
                                <i class="fab fa-dribbble"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="pin">
                                <i class="fab fa-pinterest-p"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_NavbarPartialWiev")

    </header>
    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">

                @await Html.PartialAsync("_AboutUsPartialWiev")

                <div class="col-lg-4 footer-grid-agileits-w3ls text-left">
                    @await Component.InvokeAsync("BlogLast3Posts")
                </div>
                <div class="col-lg-4 subscribe-main footer-grid-agileits-w3ls text-left">
                    <h2>Mail Bültenine Abone Ol</h2>
                    @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml");
                </div>
            </div>
            <div class="footer-cpy text-center">
                @await Html.PartialAsync("_SocialMediaPartialWiev")
                <div class="w3layouts-agile-copyrightbottom">
                    <p>
                        © @DateTime.Now.Year Asp.Net 6.0 Proje Kampı Tüm Hakları Saklıdır. | Design by
                        <a href="http://w3layouts.com/">W3layouts</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/CoreBlogThema/js/jquery-2.2.3.min.js"></script>
    <script src="~/CoreBlogThema/js/move-top.js"></script>
    <script src="~/CoreBlogThema/js/easing.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            /*
                                    var defaults = {
                                            containerID: 'toTop', // fading element id
                                        containerHoverID: 'toTopHover', // fading element hover id
                                        scrollSpeed: 1200,
                                        easingType: 'linear'
                                        };
                                    */

            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>
    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>

    <script src="~/CoreBlogThema/js/bootstrap.js"></script>

    @RenderSectionAsync("Scripts", required: false)

</body>

</html>
