@model IEnumerable<Entities.Concrete.Comment>

<div class="comment-top">
     <h4>Yorumlar</h4>

     @if (Model.Count()>0)
     {
         @foreach (var item in Model)
         {
             <div class="media">
                  <img src="~CoreBlogThema/images/t1.jpg" alt="" class="img-fluid" />
                  <div class="media-body">
                      <h5 class="mt-0">@item.CommentUserName</h5>
                      <h6>
                            @item.CommentTitle
                      </h6>
                      <br />
                      <p>
                          @item.CommentContent
                      </p>
                  </div>
             </div>
         }
     }
     else
    {
            <div class="media">
                  <div class="media-body">
                      <h5 class="mt-0">İlk Yorumu Siz Yapın...</h5>
                  </div>
             </div>
    }
</div>