@model Entities.DTOs.UserForUpdateDto
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Areas/Writer/Views/Shared/WriterLayout.cshtml";
}

@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic form elements</h4>
                <p class="card-description"> Basic form elements </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Adınız</label>
                        @Html.TextBoxFor(x => x.FirstName, new{ @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName2">Soyadınız</label>
                        @Html.TextBoxFor(x => x.LastName, new{ @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Yeni Şifreniz</label>
                        @Html.PasswordFor(x => x.Password, new{ @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>File upload</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Textarea</label>
                        @Html.TextAreaFor(x => x.UserAbout, 15, 3, new { @class = "form-control"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                    <button class="btn btn-light">Vazgeç</button>
                </form>
            </div>
        </div>
    </div>
}

