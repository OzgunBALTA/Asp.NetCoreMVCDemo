@model CoreDemo.Models.UserForProfile.UserForCreateModel

@{
    ViewData["Title"] = "CreateWriter";
    Layout = "~/Areas/Writer/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic form elements</h4>
                <p class="card-description"> Basic form elements </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Adınız</label>
                        @Html.TextBoxFor(x => x.FirstName, new{ @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName2">Soyadınız</label>
                        @Html.TextBoxFor(x => x.LastName, new{ @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Email Adresi</label>
                        @Html.TextBoxFor(x => x.Email, new{ @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.PasswordFor(x => x.Password, new{ @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Görsel</label>
                        <input type="file" name="UserImage" />
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Textarea</label>
                        @Html.TextAreaFor(x => x.UserAbout, 15, 3, new { @class = "form-control"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">Vazgeç</button>
                </form>
            </div>
        </div>
    </div>
</form>

