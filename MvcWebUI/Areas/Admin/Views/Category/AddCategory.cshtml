@model Entities.Concrete.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Yeni Kategori</h1>
<br />
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName)
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x => x.Description, 15, 3, new { @class = "form-control" })
    @Html.ValidationMessageFor(x=> x.Description)
    <br />

    <button class="btn btn-gradient-info">Yazıyı Kaydet</button>
}

